{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "#/*": ["./types/*"],
      "@@/*": ["./core/*"],
      "##/*": ["./core/types/*"]
    },
    "types": ["element-plus/global", "echarts", "lodash", "web-bluetooth"]
  },
  "include": [
    "core/vite/**/*.ts",

    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",

    "types/*.d.ts",
    "types/*.ts",
    "vite.config.ts",

    "core/**/*.ts",
    "core/**/*.d.ts",
    "core/**/*.vue",
    "core/types/*.ts",
    "core/types/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
